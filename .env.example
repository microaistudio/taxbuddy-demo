# File: .env.example
# Path: ./taxbuddy-chat-demo/.env.example
# Version: 1.0.0
# Last Modified: 2025-06-17
# Description: Environment configuration template for TaxBuddy chat demo
#
# Instructions: Copy this file to .env and update with your actual values

# Application Configuration
VITE_APP_NAME=TaxBuddy
VITE_APP_VERSION=0.1.0
VITE_NODE_ENV=development

# API Configuration
VITE_API_URL=http://localhost:3001
VITE_API_TIMEOUT=30000

# Chat Configuration
VITE_MAX_MESSAGE_LENGTH=10000
VITE_MAX_HISTORY_SIZE=100
VITE_TYPING_INDICATOR_DELAY=1000

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ANIMATION_DURATION=300

# Storage Configuration
VITE_STORAGE_PREFIX=taxbuddy_
VITE_SESSION_TIMEOUT=3600000

# Development Configuration
VITE_DEV_PORT=5173
VITE_DEV_HOST=localhost
VITE_AUTO_OPEN=false